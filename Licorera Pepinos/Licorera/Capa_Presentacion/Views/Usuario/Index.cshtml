@model IEnumerable<Capa_Presentacion.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Administrador.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div>
                <div class="box-header">
                    <h3 class="box-title">USUARIOS</h3>
                </div>
                <a class="btn btn-success" href="~/Usuario/Nuevo">
                    <span class="fa fa-plus"> Agregar</span>
                </a>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cedula)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FecNacimiento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdRol)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cedula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                        @Html.DisplayFor(modelItem => item.Apellido1)
                                        @Html.DisplayFor(modelItem => item.Apellido2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FecNacimiento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdRol)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Actualizar", "Editar", new { id = item.Id }, new { @class = "btn btn-success btn-sm", style = "background:#f39c12; border-color:#f39c12" }) |
                                        @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }, new { @class = "btn btn-danger btn-sm", style = "background:#dd4b39; border-color:#dd4b39", onclick = "return Confirmar(this);" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cedula)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FecNacimiento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdRol)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

